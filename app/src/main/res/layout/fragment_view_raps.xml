<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.ViewRapsFragment"
    android:orientation="vertical">


    <Button
        android:id="@+id/frag_view_raps_button_addrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_thin"
        android:layout_marginHorizontal="@dimen/margin_thin"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="@string/text_add_rap" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/frag_view_raps_recylerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

</LinearLayout>