<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_thin">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_thin">

            <TextView
                android:id="@+id/recyclerview_stone_textview_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:paddingVertical="@dimen/margin_thin"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/recyclerview_stone_textview_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/black"
                android:paddingVertical="@dimen/margin_thin" />

            <TextView
                android:id="@+id/recyclerview_stone_textview_shape"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/black"
                android:paddingVertical="@dimen/margin_thin" />

            <TextView
                android:id="@+id/recyclerview_stone_textview_quality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/black"
                android:paddingVertical="@dimen/margin_thin" />

            <TextView
                android:id="@+id/recyclerview_stone_textview_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/black"
                android:paddingVertical="@dimen/margin_thin" />

            <ImageButton
                android:id="@+id/recyclerview_stone_button_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_thin"
                android:layout_weight="2"
                android:adjustViewBounds="false"
                android:background="@color/white"
                android:cropToPadding="false"
                android:textColor="@color/white"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/recyclerview_stone_button_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_thin"
                android:layout_weight="2"
                android:background="@color/white"
                android:textColor="@color/white"
                app:srcCompat="@android:drawable/ic_delete" />


        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>